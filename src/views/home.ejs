    <div class="container">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="text-center">
                    <form action="/room" method="POST">
                        <input name="room" type="text" required>
                        <button type="submit">New Room</button>
                    </form>
                </div>
                <!-- show room -->
                <div class="panel panel-default">
